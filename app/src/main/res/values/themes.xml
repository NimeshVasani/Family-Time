<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FamilyTime" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/my_font_family_roboto</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>


    <style name="CircularShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="CircularCornerShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="pill_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:background">@color/white</item>
        <item name="android:strokeColor">@color/custom_grey</item>
        <item name="android:strokeWidth">5</item>
    </style>


    <style name="CutCornerButton">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="Normal_Drawable">
        <item name="android:textSize">16sp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/orange</item>
        <item name="android:shape">ring</item>
    </style>
    <style name="Base.Theme.FamilyTime.Fullscreen" parent="Base.Theme.FamilyTime">
        <item name="android:actionBarStyle">
            @style/Widget.Base.Theme.FamilyTime.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.FamilyTime.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/pull_in</item>
        <item name="android:windowExitAnimation">@anim/pull_out</item>
    </style>
  
</resources>


